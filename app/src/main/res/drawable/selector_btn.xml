<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">

            <gradient android:startColor="@color/bg_btn_start"
                      android:centerColor="@color/bg_btn_center"
                      android:endColor="@color/bg_btn_end"
                      android:angle="@integer/gradient_angle_btn"/>

            <padding android:bottom="@dimen/padding_btn"
                     android:top="@dimen/padding_btn"
                     android:left="@dimen/padding_btn"
                     android:right="@dimen/padding_btn"/>

            <corners android:bottomLeftRadius="@dimen/corner_radius_bnt"
                     android:bottomRightRadius="@dimen/corner_radius_bnt"
                     android:topLeftRadius="@dimen/corner_radius_bnt"
                     android:topRightRadius="@dimen/corner_radius_bnt"/>


        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">


            <gradient android:startColor="@color/bg_btn_center"
                      android:centerColor="@color/bg_btn_start"
                      android:endColor="@color/bg_btn_center"
                      android:angle="@integer/gradient_angle_btn_pressed"/>

            <padding android:bottom="@dimen/padding_btn"
                     android:top="@dimen/padding_btn"
                     android:left="@dimen/padding_btn"
                     android:right="@dimen/padding_btn"/>

            <corners android:bottomLeftRadius="@dimen/corner_radius_bnt"
                     android:bottomRightRadius="@dimen/corner_radius_bnt"
                     android:topLeftRadius="@dimen/corner_radius_bnt"
                     android:topRightRadius="@dimen/corner_radius_bnt"/>

        </shape>
    </item>
</selector>